<div class="container">
    <% if(error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <h5><%= error %></h5>
        </div>
    <% } %>
    <% if(success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <h5><%= success %></h5>
        </div>
    <% } %>
</div>
<section class="contact">
    <div class="Box">
        <div class="fBox">
            <form action="/home/ideas/<%= idea._id %>?_method=PUT" method="POST">
            
                <h2>Edit Idea <br>"<%= idea.title %>" </h2>
                <div class="iBox">
                    <input type="text" name="blog[title]" value="<%= idea.title %>" required="required">
                    <span>Title : </span>
                </div>
                <div class="iBox">
                    <textarea name="blog[body]" required="required"><%= idea.body %></textarea>
                    <span>Idea Desc : </span>
                </div>
                <div class="iBox">
                    <textarea required="required" name="blog[tech]"><%= idea.tech %></textarea>
                    <span>Tech Used :</span>
                </div>
                <div class="iBox">
                    <input type="submit" value="Update">
                </div>
            
            </form>
        </div>
        <div class="UpdImgBx" data-aos="fade-left" data-aos-duration="800">
        </div>
    
</div>


